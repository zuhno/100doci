        span 1. 소나무
      .button(data-answer="2" ontouchstart="")
        span 2. 대나무
      .button(data-answer="3" ontouchstart="")
        span 3. 전나무
      .button(data-answer="4" ontouchstart="")
        span 4. 벚나무
    .hint
      .hint__icon
        img(data-src="images/svgs/fill_star.svg", alt="fill_star")
        span hint
        img(data-src="images/svgs/fill_star.svg", alt="fill_star")
      .hint__img
        img(data-src="https://cuttleman.github.io/bangguseok-image-hosting/mainImages/q7_hint.png", alt="q7_hint")