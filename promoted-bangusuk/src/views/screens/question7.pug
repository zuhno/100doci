  .slide__Content.question7#q7
    .difficulty
      span 난이도
      .difficulty__stars
        img(data-src="images/svgs/fill_star.svg", alt="fill_star")
        img(data-src="images/svgs/unfill_star.svg", alt="fill_star")
        img(data-src="images/svgs/unfill_star.svg", alt="unfill_star")
    .question7__section.q7Section.q-section.q-section
      .q7Section__number.q-number
        img(data-src="https://cuttleman.github.io/bangguseok-image-hosting/mainImages/q7_top.png", alt="q7_top")
      .q7Section__text.q-text
        span '눈으로 본 것을 새롭게'
